# BlueBot AWS Environment Variables (Example)
# Copy this file to `.env` and fill in the values.

# Core AWS
EXPO_PUBLIC_AWS_REGION=af-south-1
# Do NOT commit real keys. Use placeholders.
EXPO_PUBLIC_AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
EXPO_PUBLIC_AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# Optional session token for temporary creds
EXPO_PUBLIC_AWS_SESSION_TOKEN=

# Cognito
EXPO_PUBLIC_COGNITO_USER_POOL_ID=YOUR_COGNITO_USER_POOL_ID
# Cognito App Client ID
EXPO_PUBLIC_COGNITO_CLIENT_ID=YOUR_COGNITO_APP_CLIENT_ID

# DynamoDB table names (override if different)
EXPO_PUBLIC_DYNAMODB_USERS_TABLE=BlueBot-Users
EXPO_PUBLIC_DYNAMODB_EXPENSES_TABLE=BlueBot-Expenses
EXPO_PUBLIC_DYNAMODB_BUDGETS_TABLE=BlueBot-Budgets
EXPO_PUBLIC_DYNAMODB_TRANSACTIONS_TABLE=BlueBot-Transactions
EXPO_PUBLIC_DYNAMODB_USER_PROGRESS_TABLE=BlueBot-UserProgress
EXPO_PUBLIC_DYNAMODB_CHAT_SESSIONS_TABLE=BlueBot-ChatSessions
EXPO_PUBLIC_DYNAMODB_RECEIPTS_TABLE=BlueBot-Receipts

# S3 receipts bucket
EXPO_PUBLIC_S3_RECEIPTS_BUCKET=bluebot-receipts
# or use generic
EXPO_PUBLIC_AWS_S3_BUCKET=bluebot-receipts

# Bedrock models
EXPO_PUBLIC_BEDROCK_MODEL_ID=anthropic.claude-opus-4-1-20250805-v1:0
EXPO_PUBLIC_BEDROCK_REALTIME_MODEL_ID=amazon.nova-realtime-v1:0

# Anthropic (Claude)
EXPO_PUBLIC_ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY
EXPO_PUBLIC_ANTHROPIC_MODEL_ID=anthropic.claude-opus-4-1-20250805-v1:0

# App flags
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_DEFAULT_CURRENCY=ZAR
EXPO_PUBLIC_DEFAULT_LANGUAGE=en
